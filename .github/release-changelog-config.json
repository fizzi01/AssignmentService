{
  "template": "# Changelog\n\n${{CHANGELOG}}\n\n${{RELEASE_DIFF}}\n",
  "categories": [
    { "title": "## ğŸ‰ Enhancements", "labels": ["enhancement"] },
    { "title": "## âš’ï¸ Bug Fixes", "labels": ["bug","fixes","fix","fixed"] },
    { "title": "## Maintenance", "labels": ["chore"] },
    { "title": "## ğŸ†• Changes", "labels": [] }
  ],
  "max_tags_to_fetch": 10,
  "max_pull_requests": 50,
  "max_issues": 50,
  "include_unlabeled": true,
  "include_body": true,
  "label_extractor": [
    {
      "pattern": "^(build|chore|enhancement|ci|docs|feat|fix|perf|refactor|revert|style|test){1}?: ([\\w ][\\s\\S]*)",
      "target": "$1"
    }
  ],
  "transformers": [
  {
    "pattern": "^(build|chore|enhancement|ci|docs|feat|fix|perf|refactor|revert|style|test){1}?: ([\\w ][\\s\\S]*)",
    "target": "$2"
  }
],
  "commit_template": "- ${{MESSAGE}}\n  ${{BODY}}\n"
}
